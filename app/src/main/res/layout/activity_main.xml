<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/activity1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableRight="@drawable/done"
        android:text="@string/activity1"
        android:textSize="13dp"
        app:layout_constraintHeight_percent=".30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:id="@+id/activity2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableRight="@drawable/excercise"
        android:text="@string/activity2"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".30"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/activity3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableRight="@drawable/chart"
        android:text="@string/activity3"
        android:textSize="13dp"
        app:layout_constraintHeight_percent=".30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity1"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:id="@+id/activity4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableRight="@drawable/star"
        android:text="@string/activity4"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".30"
        app:layout_constraintTop_toBottomOf="@id/activity2"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:id="@+id/activity5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableRight="@drawable/speech"
        android:text="@string/activity5"
        android:textSize="13dp"
        app:layout_constraintHeight_percent=".30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity3"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:id="@+id/activity6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableRight="@drawable/communicate"
        android:text="@string/activity6"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".30"
        app:layout_constraintTop_toBottomOf="@id/activity4"
        app:layout_constraintWidth_percent=".5" />


</androidx.constraintlayout.widget.ConstraintLayout>